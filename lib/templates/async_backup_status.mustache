{{!
    @template core/async_backup_status.

    Moodle Asynchronous backup status template.

    The purpose of this template is to render status
    updates during an asynchronous backup or restore
    process..

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    *

    Example context (json):
    {
        "id": "async-backup-bar",
        "backupid": "f04abf8cba0319e486a3dfa7e9cb4476",
        "courseid": "4",
        "courseurl": "/course/view.php?id=6",
        "restoreurl": "/backup/restorefile.php?contextid=287",
        "width": "500"
    }
}}
<div class="progressbar_container" style="width: {{width}}px;" id="{{id}}">
    <h3 id="{{id}}_status">The backup process is pending</h3>
    <div class="progress active" style="height: 25px;">
        <div id="{{id}}_bar" class="progress-bar  progress-bar-striped progress-bar-animated" style="width: 100%" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="0">
            Process Pending
        </div>
    </div>
    <p>{{# str }} asyncnowait, backup {{/ str }}<br/>{{# str }} asynccheckprogress, backup, {{restoreurl}} {{/ str }}</p>
    <a href="{{courseurl}}" class="btn btn-primary">{{# str }} asyncreturn, backup {{/ str }}</a>
</div>

{{#js}}
require(['core/async_backup'], function(Async) {
    Async.init("{{backupid}}", "{{courseid}}");
});
{{/js}}
