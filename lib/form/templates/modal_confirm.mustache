{{!
    @template core_form/modal_confirm

    Displays the form confirmation message.

    Example context (json):
    {
        "notices": [
            "Require email verification",
            "Login domains"
        ]
    }
}}
<div class="form_confirm">
    <div class="form_confirm_message">{{#str}} fieldimpact, core_form {{/str}}</div>
    <ul class="form_confirm_list">
        {{#notices}}
            <li class="form_confirm_list_item">
                {{#str}} field, core_form , {{label}}{{/str}} {{#description}}({{description}}){{/description}}
            </li>
        {{/notices}}
    </ul>
</div>
